<h2>Listagem de postagens:</h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success my-5">Nova postagem</button></a>

{{#each categorias}}
<div class="card my-1 bg-light ">
    <div class="card-body">
        <h4>{{titulo}}</h4>
        <small>{{descricao}}</small>
        <div class="mt-5">{{conteudo}}</div>
        <small class="mt-3 d-block">Categoria: {{categoria.nome}}</small>
        <small class="d-block">Slug: {{slug}}</small>
        <small>Data:</small>
        <small class="data data-{{_id}}">{{data}}</small>
        <script>
            document.querySelector('.data-{{_id}}').innerHTML = new Date('{{data}}').toLocaleDateString();
        </script>
        <div class="d-flex align-items-center">
            <a href="/admin/postagens/edit/{{_id}}"><button class="btn-sm btn-info mt-4">Editar postagem</button></a>
            <a href="/admin/postagens/deletar/{{_id}}"><button class="btn-sm btn-danger mt-4 ml-3">Deletar</button></a>
        </div>
    </div>
</div>
{{else}}
<h4>Não há postagens para serem mostradas</h4>

{{/each}}