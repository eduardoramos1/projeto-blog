<h3 class="mt-5">Posts com a categoria {{categoria.nome}}</h3>
 
 {{#each postagens}}
<div class="card my-4 ">
    <div class="card-body shadow">
        <h3>{{titulo}}</h3>
        <small class="d-block">{{descricao}}</small>
        <hr>
        <div class="mt-2 overflowBox">{{conteudo}}</div>
        <a href="/postagem/{{_id}}"><button class="btn btn-info mt-3">Leia +</button></a>
        {{!-- Formatar a data da postagem --}}
        <hr class="mt-3">
        <small class="data date-{{_id}} d-block ">data: {{data}}</small>
        <script>
            document.querySelector('.date-{{_id}}').innerHTML = new Date('{{data}}').toLocaleDateString();
        </script>
        <small class="d-block mt-3">{{categoria.nome}}</small>
    </div>
</div>
{{else}}
    <div class="alert alert-danger mt-5">Não há posts com esta categoria</div>

{{/each}}
  